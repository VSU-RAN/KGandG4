<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fx:id="scrollPane"
            hbarPolicy="NEVER"
            vbarPolicy="AS_NEEDED"
            fitToWidth="true"
            style="-fx-background: #ffffff;
                  -fx-border-color: #ced4da;
                  -fx-border-width: 0 0 0 1;"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="vsu.org.ran.kgandg4.controllers.RenderPanelController">

    <VBox fx:id="renderPanel" spacing="12"
          style="-fx-padding: 16;
                 -fx-background-color: #ffffff;"
          minWidth="320" prefWidth="340">

        <!-- Заголовок -->
        <Label text="Настройки рендеринга"
               style="-fx-font-size: 16px;
                      -fx-font-weight: 600;
                      -fx-text-fill: #343a40;" />

        <!-- Режим рендеринга -->
        <VBox spacing="8" style="-fx-padding: 12;
                                 -fx-background-color: #f8f9fa;
                                 -fx-border-color: #e9ecef;
                                 -fx-border-width: 1;
                                 -fx-border-radius: 6;
                                 -fx-background-radius: 6;">
            <Label style="-fx-font-weight: 600; -fx-font-size: 14px; -fx-text-fill: #495057;"
                   text="Режим рендеринга:"/>
            <VBox spacing="6" style="-fx-padding: 0 0 0 8;">
                <RadioButton fx:id="solidModeRadio" text="Заливка цветом" selected="true"
                             style="-fx-font-size: 13px;"/>
                <RadioButton fx:id="textureModeRadio" text="Текстура"
                             style="-fx-font-size: 13px;"/>
                <RadioButton fx:id="lightingModeRadio" text="Освещение"
                             style="-fx-font-size: 13px;"/>
            </VBox>
        </VBox>

        <!-- Настройки отображения -->
        <VBox spacing="8" style="-fx-padding: 12;
                                 -fx-background-color: #f8f9fa;
                                 -fx-border-color: #e9ecef;
                                 -fx-border-width: 1;
                                 -fx-border-radius: 6;
                                 -fx-background-radius: 6;">
            <Label style="-fx-font-weight: 600; -fx-font-size: 14px; -fx-text-fill: #495057;"
                   text="Настройки отображения:"/>
            <VBox spacing="6" style="-fx-padding: 0 0 0 8;">
                <CheckBox fx:id="showWireframeCheck" text="Рисовать полигональную сетку"
                          style="-fx-font-size: 13px;"/>
                <CheckBox fx:id="useTextureCheck" text="Использовать текстуру"
                          style="-fx-font-size: 13px;"/>
                <CheckBox fx:id="useLightingCheck" text="Использовать освещение"
                          style="-fx-font-size: 13px;"/>
            </VBox>
        </VBox>

        <!-- Палитра цветов -->
        <!-- Контейнер для пользовательской палитры -->
        <VBox fx:id="paletteContainer" spacing="6"
              style="-fx-padding: 8;
             -fx-background-color: #ffffff;
             -fx-border-color: #e9ecef;
             -fx-border-width: 1;
             -fx-border-radius: 4;
             -fx-background-radius: 4;">
            <Label text="Выберите цвет кликом" style="-fx-font-size: 12px; -fx-text-fill: #6c757d; -fx-padding: 0 0 4 0;"/>

            <!-- HueSlider с фиксированной шириной -->
            <Pane fx:id="hueSliderContainer" style="-fx-pref-height: 25;">
                <!-- HueSlider будет добавлен динамически -->
            </Pane>

            <!-- ColorPalette с фиксированными размерами -->
            <Pane fx:id="colorPaletteContainer" style="-fx-pref-height: 140;">
                <!-- ColorPalette будет добавлен динамически -->
            </Pane>
        </VBox>

        <!-- Быстрый выбор цвета -->
        <VBox spacing="8" style="-fx-padding: 12;
                                 -fx-background-color: #f8f9fa;
                                 -fx-border-color: #e9ecef;
                                 -fx-border-width: 1;
                                 -fx-border-radius: 6;
                                 -fx-background-radius: 6;">
            <Label style="-fx-font-weight: 600; -fx-font-size: 14px; -fx-text-fill: #495057;"
                   text="Быстрый выбор цвета:"/>

            <!-- ColorPicker -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
                <Label text="Цвет:" style="-fx-min-width: 80; -fx-font-size: 13px; -fx-text-fill: #6c757d;"/>
                <ColorPicker fx:id="faceColorPicker" style="-fx-font-size: 13px;"/>
            </HBox>
        </VBox>

        <!-- Точная настройка RGB -->
        <VBox spacing="12" style="-fx-padding: 12;
                         -fx-background-color: #f8f9fa;
                         -fx-border-color: #e9ecef;
                         -fx-border-width: 1;
                         -fx-border-radius: 6;
                         -fx-background-radius: 6;">
            <Label style="-fx-font-weight: 600; -fx-font-size: 14px; -fx-text-fill: #495057;"
                   text="Точная настройка RGB:"/>

            <Label fx:id="rgbLabel" text="RGB: 74, 144, 226"
                   style="-fx-font-size: 13px; -fx-text-fill: #6c757d; -fx-font-family: 'Monospace';"/>

            <!-- Красный -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Красный (R):"
                       style="-fx-min-width: 100; -fx-text-fill: #dc3545; -fx-font-weight: 600;"/>
                <Slider fx:id="redSlider" HBox.hgrow="ALWAYS" minHeight="30"/>
                <Label fx:id="redValue" text="74"
                       style="-fx-min-width: 40; -fx-font-size: 13px; -fx-text-fill: #dc3545; -fx-alignment: CENTER_RIGHT;"/>
            </HBox>

            <!-- Зеленый -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Зеленый (G):"
                       style="-fx-min-width: 100; -fx-text-fill: #28a745; -fx-font-weight: 600;"/>
                <Slider fx:id="greenSlider" HBox.hgrow="ALWAYS" minHeight="30"/>
                <Label fx:id="greenValue" text="144"
                       style="-fx-min-width: 40; -fx-font-size: 13px; -fx-text-fill: #28a745; -fx-alignment: CENTER_RIGHT;"/>
            </HBox>

            <!-- Синий -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Синий (B):"
                       style="-fx-min-width: 100; -fx-text-fill: #007bff; -fx-font-weight: 600;"/>
                <Slider fx:id="blueSlider" HBox.hgrow="ALWAYS" minHeight="30"/>
                <Label fx:id="blueValue" text="226"
                       style="-fx-min-width: 40; -fx-font-size: 13px; -fx-text-fill: #007bff; -fx-alignment: CENTER_RIGHT;"/>
            </HBox>

            <Label text="Перетащите ползунки для точной настройки цвета"
                   style="-fx-font-size: 11px; -fx-text-fill: #6c757d; -fx-font-style: italic;"/>
        </VBox>

        <!-- Настройки освещения -->
        <VBox spacing="12" style="-fx-padding: 12;
                         -fx-background-color: #f8f9fa;
                         -fx-border-color: #e9ecef;
                         -fx-border-width: 1;
                         -fx-border-radius: 6;
                         -fx-background-radius: 6;">
            <Label style="-fx-font-weight: 600; -fx-font-size: 14px; -fx-text-fill: #495057;"
                   text="Настройки освещения:"/>

            <!-- Интенсивность -->
            <Label text="Интенсивность:"
                   style="-fx-font-size: 13px; -fx-text-fill: #6c757d;"/>

            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="0%" style="-fx-min-width: 40; -fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                <Slider fx:id="lightIntensitySlider" HBox.hgrow="ALWAYS" minHeight="30" min="0" max="1.0" value="1.0"/>
                <Label text="100%" style="-fx-min-width: 40; -fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
            </HBox>

            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Текущее:"
                       style="-fx-min-width: 60; -fx-font-size: 13px; -fx-text-fill: #495057;"/>
                <Label fx:id="lightIntensityValue" text="1.0"
                       style="-fx-min-width: 60; -fx-font-size: 13px; -fx-text-fill: #ffc107; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Цвет освещения -->
            <Separator style="-fx-padding: 8 0 8 0;" />

            <Label text="Цвет освещения:"
                   style="-fx-font-size: 13px; -fx-text-fill: #6c757d;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Цвет:" style="-fx-min-width: 80; -fx-font-size: 13px; -fx-text-fill: #6c757d;"/>
                <ColorPicker fx:id="lightColorPicker" style="-fx-font-size: 13px;" value="WHITE"/>
            </HBox>
        </VBox>

    </VBox>
</ScrollPane>